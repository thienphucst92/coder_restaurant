<h1>
  <small>Order For</small> <%= @food_item.name %>
</h1>
  <%= form_for [@food_item, Order.new] do |f| %>

  <fieldset class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'%>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :phone %>
    <%= f.telephone_field(:phone) %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control'%>
  </fieldset>

  <%= f.submit "Submit Order", class: 'btn-primary' %>
<% end %>
